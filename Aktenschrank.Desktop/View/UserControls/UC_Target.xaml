<UserControl x:Class="Aktenschrank.Desktop.View.UserControls.UC_Target"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewModel="clr-namespace:Aktenschrank.Desktop.View.UserControls"
             d:DataContext="{d:DesignInstance Type=viewModel:UC_Target}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer  VerticalScrollBarVisibility="Auto" IsEnabled="{Binding SelectedItem, Converter={StaticResource NullToBoolConverter}, ElementName=LbSortingProfiles}">
        <StackPanel CanVerticallyScroll="True" ScrollViewer.CanContentScroll="True" ScrollViewer.VerticalScrollBarVisibility="Auto" Margin="0,0,20,0">
            <TextBlock Text="Path:" Height="17.96"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <TextBox Text="{Binding Target.FolderPath}" Width="500"/>
                <Button Content="..." Width="17.96" Height="17.96" />
            </StackPanel>
            <CheckBox Content="Enabled"   IsChecked="{Binding Target.Enabled}" Margin="0,7,0,3.5"/>
            <CheckBox Content="Recursive" IsChecked="{Binding Target.Recursive}"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>
