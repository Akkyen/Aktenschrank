<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:cmds="clr-namespace:Aktenschrank.Utils"
        xmlns:viewModel="clr-namespace:Aktenschrank.Desktop.ViewModel"
        d:DataContext="{d:DesignInstance Type=viewModel:MainWindowViewModel}"
        x:Class="Aktenschrank.Desktop.View.MainWindow"
        mc:Ignorable="d"
        Icon="/Resources/aktenschrank.ico"
        Title="Aktenschrank" Height="500" Width="800">
    <Window.CommandBindings>
        <CommandBinding Command="cmds:Commands.LbDeleteSortingProfileCommand" Executed="LbDeleteSortingProfileCommand"/>
        <CommandBinding Command="cmds:Commands.LbDuplicateSortingProfileCommand" Executed="LbDuplicateSortingProfileCommand"/>
    </Window.CommandBindings>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Menu DockPanel.Dock="Top" Grid.ColumnSpan="1"/>
        <ToolBarPanel Grid.Column="1" Background="#FFF0F0F0" ScrollViewer.VerticalScrollBarVisibility="Disabled" Orientation="Horizontal">
            <Button x:Name="BtRunAllBehaviours" Width="25" Height="25" HorizontalAlignment="Left">
                <Button.BorderBrush>
                    <SolidColorBrush Color="#FF707070" Opacity="0"/>
                </Button.BorderBrush>
                <Button.Background>
                    <SolidColorBrush Color="#FFDDDDDD" Opacity="0"/>
                </Button.Background>
            </Button>
            <Button x:Name="BtRunSelectedBehaviour" Width="25" Height="25" HorizontalAlignment="Left">
                <Button.BorderBrush>
                    <SolidColorBrush Color="#FF707070" Opacity="0"/>
                </Button.BorderBrush>
                <Button.Background>
                    <SolidColorBrush Color="#FFDDDDDD" Opacity="0"/>
                </Button.Background>
            </Button>
        </ToolBarPanel>
        <DockPanel DockPanel.Dock="Left" LastChildFill="True" Grid.Row="1">
            <Grid DockPanel.Dock="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="20"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="TbNewSortingProfileName" PreviewTextInput="OnlyLettersAndNumbers_PreviewTextInput" Text="{Binding Path=TbNewSortingProfileName}" TextWrapping="Wrap" VerticalContentAlignment="Center" PreviewKeyDown="TbNewSortingProfileName_PreviewKeyDown" Margin="0,0,1,0"/>
                <Button Grid.Column="1" Content="+" Click="BtCreateSortingProfile_Click"/>
                <Button Grid.Column="2" Content="-" Click="BtDeleteSortingProfile_Click"/>
                <Button Grid.Column="3" Content="D" Click="BtDuplicateSortingProfile_Click"/>
            </Grid>
            <ListBox x:Name="LbSortingProfiles" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Auto" ItemsSource="{Binding SortingProfiles}">
                <ListBox.InputBindings>
                    <KeyBinding Key="Delete" Command="cmds:Commands.LbDeleteSortingProfileCommand"/>
                    <KeyBinding Key="D" Modifiers="Ctrl" Command="cmds:Commands.LbDuplicateSortingProfileCommand"/>
                </ListBox.InputBindings>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid Width="{Binding ActualWidth, ConverterParameter=15, Converter={StaticResource WidthMinusConstantConverter}, ElementName=LbSortingProfiles, Mode=OneWay}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="20"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Text="{Binding Name}" BorderThickness="0" SelectionOpacity="0" CaretBrush="Black" Margin="0,0,20,0" HorizontalAlignment="Left">
                                <TextBox.Background>
                                    <SolidColorBrush Color="Black" Opacity="0"/>
                                </TextBox.Background>
                            </TextBox>
                            <Button Grid.Column="1" Content="X" HorizontalAlignment="Stretch"/>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </DockPanel>
        <TabControl DockPanel.Dock="Right" Grid.Row="1" Grid.Column="1" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <TabItem x:Name="TiDetails" Header="Details">
                <ScrollViewer  VerticalScrollBarVisibility="Auto" IsEnabled="{Binding SelectedItem, Converter={StaticResource NullToBoolConverter}, ElementName=LbSortingProfiles}">
                    <StackPanel CanVerticallyScroll="True" ScrollViewer.CanContentScroll="True" ScrollViewer.VerticalScrollBarVisibility="Auto" Margin="0,0,20,0">
                        <TextBlock TextWrapping="Wrap"><Run Language="de-de" Text="Name:"/></TextBlock>
                        <TextBox TextWrapping="Wrap" Text="{Binding SelectedItem.Name, ElementName=LbSortingProfiles}" PreviewTextInput="OnlyLettersAndNumbers_PreviewTextInput" Width="300" HorizontalAlignment="Left" Margin="0,0,0,3.5"/>
                        <TextBlock TextWrapping="Wrap" Height="15.96"><Run Text="Description:"/></TextBlock>
                        <TextBox TextWrapping="Wrap" Text="{Binding SelectedItem.Description, ElementName=LbSortingProfiles}" PreviewTextInput="OnlyLettersAndNumbers_PreviewTextInput" Width="300" HorizontalAlignment="Left" Margin="0,0,0,7.5"/>
                        <CheckBox Content="Enabled" Margin="0,0,0,3.5" IsChecked="{Binding SelectedItem.Enabled, ElementName=LbSortingProfiles}"/>
                        <CheckBox Content="Run as Service" Margin="0,0,0,7.5" IsChecked="{Binding SelectedItem.AutoRun, ElementName=LbSortingProfiles}"/>
                        <StackPanel Orientation="Horizontal">
                            <Button Content="+" Height="20" Width="20" Click="BtCreateBehaviour_Click"/>
                            <Button Content="-" Height="20" Width="20" Click="BtDeleteBehaviour_Click" Margin="0,0,5,0"/>
                            <TextBlock VerticalAlignment="Center" Text="Behaviours:"/>
                        </StackPanel>
                        <ListBox x:Name="LbSelectedSortingProfileBehaviours" Height="100" Margin="0,3.5,0,7.5" ItemsSource="{Binding SelectedItem.Behaviours, ElementName=LbSortingProfiles}"/>
                        <StackPanel Orientation="Horizontal">
                            <Button Content="+" Height="20" Width="20" Click="BtCreateTarget_Click"/>
                            <Button Content="-" Height="20" Width="20" Click="BtDeleteTarget_Click" Margin="0,0,5,0"/>
                            <TextBlock VerticalAlignment="Center" Text="Targets:"/>
                        </StackPanel>
                        <ListBox x:Name="LbSelectedSortingProfileTargets" Height="100"  Margin="0,3.5,0,7.5" ItemsSource="{Binding SelectedItem.Targets, ElementName=LbSortingProfiles}"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>
        <Grid Grid.Row="2" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
